<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:id="@+id/same_tj_style_one_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp" app:cardCornerRadius="15dp" app:cardPreventCornerOverlap="true" app:cardUseCompatPadding="true" app:elevation="24dp">
            <FrameLayout android:id="@+id/same_tj_source_type_layout" android:background="@color/search_edittext_bg_color" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:ellipsize="end" android:gravity="center" android:id="@+id/item_jhtj_desc_tv" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:maxLines="5"/>
                    <TextView android:textSize="14sp" android:textColor="@color/color_fc6a00" android:gravity="center" android:id="@+id/same_tj_detail_btn" android:background="@drawable/simple_item_bg_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:minHeight="50dp" android:text="@string/same_tj_detail"/>
                </LinearLayout>
                <ImageView android:layout_gravity="end" android:id="@+id/same_tj_source_type_iv" android:layout_width="52dp" android:layout_height="51dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout android:orientation="vertical" android:id="@+id/same_tj_style_two_layout" android:background="@drawable/shape_dialog_tips_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_666666" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/same_tj_style_t_tips" android:layout_marginStart="10dp"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/same_tj_list_rv" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <ImageView android:layout_gravity="right" android:id="@+id/same_tj_close_btn" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/jhtj_close_btn"/>
</FrameLayout>
