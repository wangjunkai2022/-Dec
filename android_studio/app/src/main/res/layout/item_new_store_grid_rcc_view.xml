<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/new_store_item_bg_selector" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/item_book_name_txt_size" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/item_simple_book_name_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
        <ImageView android:id="@+id/item_simple_book_image" android:layout_width="@dimen/book_image_list_small_width" android:layout_height="@dimen/book_image_list_small_height" android:scaleType="centerCrop" android:layout_marginEnd="6dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:ellipsize="end" android:id="@+id/item_simple_book_author_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:lines="1" android:layout_toRightOf="@+id/item_simple_book_image"/>
        <TextView android:textSize="11.5sp" android:textColor="@color/color_666666" android:ellipsize="end" android:id="@+id/item_simple_book_cname_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:lines="1" android:layout_toRightOf="@+id/item_simple_book_image" android:layout_below="@+id/item_simple_book_author_txt"/>
        <TextView android:textSize="@dimen/item_score_txt_size" android:textStyle="bold" android:textColor="@color/color_score" android:id="@+id/item_simple_book_score_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true" android:layout_toRightOf="@+id/item_simple_book_image" android:layout_below="@+id/item_simple_book_cname_txt"/>
    </RelativeLayout>
</LinearLayout>
