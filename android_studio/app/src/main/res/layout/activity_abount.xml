<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.biquge.ebook.app.widget.HeaderView android:id="@+id/activity_disclaimer_actionbar" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:background="@color/main_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="50dp" android:src="@mipmap/ic_launcher"/>
        <TextView android:textSize="18sp" android:textColor="@color/color_333333" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/app_name"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="30dp" android:text="版本号"/>
        <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/activity_draw_abount_version_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="6dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:text="联系方式"/>
        <TextView android:textSize="14sp" android:textColor="#ff333333" android:autoLink="email" android:id="@+id/activity_draw_abount_email_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="6dp"/>
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="14sp" android:textColor="@color/color_2C578E" android:gravity="center" android:id="@+id/privacy_agreement_txt" android:background="@drawable/simple_bg_selector" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/privacy_agreement_title" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_2C578E" android:gravity="center" android:id="@+id/privacy_user_service_txt" android:background="@drawable/simple_bg_selector" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/privacy_user_service_title" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
