<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/guide_parent_view" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/comic_guide_image"/>
        <TextView android:textSize="20sp" android:textColor="#fff7b11b" android:id="@+id/comic_read_guide_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comic_guide_title_updown"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/guide_vertical_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_top_txt"/>
            <ImageView android:id="@+id/guide_vertical_last_view" android:layout_width="65dp" android:layout_height="65dp" android:src="@drawable/comic_guide_gestures_top"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_center_txt"/>
            <ImageView android:id="@+id/guide_vertical_center_view" android:layout_width="65dp" android:layout_height="65dp" android:src="@drawable/comic_guide_gestures_center"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_bottom_txt"/>
            <ImageView android:id="@+id/guide_vertical_next_view" android:layout_width="65dp" android:layout_height="65dp" android:src="@drawable/comic_guide_gestures_bottom"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/guide_horizontal_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_left_txt"/>
            <ImageView android:id="@+id/guide_horizontal_last_view" android:layout_width="65dp" android:layout_height="65dp" android:src="@drawable/comic_guide_gestures_left"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_center_txt"/>
            <ImageView android:id="@+id/guide_horizontal_center_view" android:layout_width="65dp" android:layout_height="65dp" android:src="@drawable/comic_guide_gestures_center"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_right_txt"/>
            <ImageView android:id="@+id/guide_horizontal_next_view" android:layout_width="65dp" android:layout_height="65dp" android:src="@drawable/comic_guide_gestures_right"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
