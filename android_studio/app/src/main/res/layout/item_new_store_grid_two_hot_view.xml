<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/new_store_item_bg_selector" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/item_simple_book_image" android:layout_width="@dimen/book_image_list_small_width" android:layout_height="@dimen/book_image_list_small_height" android:scaleType="centerCrop" android:layout_marginStart="5dp" android:layout_marginEnd="10dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/item_book_name_txt_size" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/item_simple_book_name_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:ellipsize="end" android:id="@+id/item_simple_book_author_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true"/>
        <TextView android:textSize="11sp" android:textColor="#fff96149" android:id="@+id/item_simple_book_tag_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
