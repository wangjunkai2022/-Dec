<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:textColor="@color/color_ffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/dialog_config_msg_title" android:background="@drawable/icon_pubnotice_title_bg" android:paddingTop="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="80dp" android:text="@string/tips_config_message_tip_title_txt" android:maxLines="2" android:singleLine="true" android:paddingStart="20dp" android:paddingEnd="20dp"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/shape_pubnotice_content_bg" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ScrollView android:padding="10dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="210dp">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:id="@+id/dialog_message" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2"/>
        </ScrollView>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
            <TextView android:textSize="14sp" android:textColor="@color/color_666666" android:gravity="center" android:id="@+id/k7" android:background="@drawable/selector_message_item_btn_bg" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/main_cancel" android:layout_weight="1" android:layout_marginStart="10dp" android:layout_marginEnd="15dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/dialog_ok" android:background="@drawable/selector_red_semicircle_bg_red" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/main_confirm" android:layout_weight="1" android:layout_marginStart="15dp" android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
