<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/main_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/cartoon_close_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.biquge.ebook.app.widget.StatusBarView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/cartoon_close_btn" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="@dimen/titlebar_height" android:src="@drawable/brown_before"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="100dp">
        <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="220dp" android:src="@drawable/icon_mhtg_guide"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/cartoon_tg_desc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-20dp" android:paddingStart="35dp" android:paddingEnd="35dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_normal_color" android:id="@+id/cartoon_tg_cacel_btn" android:background="@drawable/selector_gray_cancel_btn_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mgtg_two_btn_cancel_txt" android:singleLine="true" android:paddingStart="35dp" android:paddingEnd="35dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_ffffff" android:id="@+id/cartoon_tg_download_btn" android:background="@drawable/selector_red_semicircle_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mgtg_two_btn_download_txt" android:singleLine="true" android:paddingStart="35dp" android:paddingEnd="35dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
