<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
    <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="18sp" android:textColor="#ffffffff" android:layout_gravity="center_vertical" android:id="@+id/item_font_name_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/item_font_image" android:background="#ff232323" android:visibility="gone" android:layout_width="80dp" android:layout_height="25dp" android:layout_marginStart="10dp"/>
    </FrameLayout>
    <TextView android:textSize="11sp" android:textColor="#ffacacac" android:id="@+id/item_font_size_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.biquge.ebook.app.ui.view.DownloadProgressButton android:layout_gravity="center" android:id="@+id/item_font_download_txt" android:paddingLeft="10dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/download_txt"/>
        <ImageView android:layout_gravity="center" android:id="@+id/item_font_use_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/iconn_font_select"/>
    </FrameLayout>
</LinearLayout>
