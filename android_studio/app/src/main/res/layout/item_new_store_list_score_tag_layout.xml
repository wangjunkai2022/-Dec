<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@drawable/new_store_item_bg_selector" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="8dp">
    <FrameLayout android:layout_width="@dimen/book_image_list_width" android:layout_height="@dimen/book_image_list_height">
        <ImageView android:id="@+id/item_simple_book_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <TextView android:textSize="@dimen/item_score_txt_size" android:textStyle="bold" android:textColor="@color/color_score" android:id="@+id/item_simple_book_score_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
    </FrameLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="15dp">
        <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:id="@+id/item_simple_book_name_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="12.5sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/item_simple_book_simple_info_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="2" android:layout_below="@+id/item_simple_book_name_txt"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:gravity="center" android:id="@+id/item_simple_book_type_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/item_simple_book_simple_info_txt"/>
        <TextView android:textSize="@dimen/item_score_txt_size" android:textStyle="bold" android:textColor="@color/color_score" android:gravity="center" android:id="@+id/item_simple_book_tag_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/item_simple_book_simple_info_txt" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
