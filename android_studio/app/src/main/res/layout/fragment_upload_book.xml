<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/wifi_transmit_book_layout" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="12dp">
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/upload_book_name" android:layout_marginStart="5dp"/>
            <com.biquge.ebook.app.widget.ClearEditText android:textSize="14sp" android:textColor="@color/color_666666" android:textColorHint="@color/color_999999" android:gravity="center_vertical" android:id="@+id/upload_book_name_txt" android:background="@drawable/shape_login_input_bg" android:layout_width="match_parent" android:layout_height="@dimen/input_et_height" android:layout_marginTop="5dp" android:singleLine="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/upload_book_writer" android:layout_marginStart="5dp"/>
            <com.biquge.ebook.app.widget.ClearEditText android:textSize="14sp" android:textColor="@color/color_666666" android:textColorHint="@color/color_999999" android:gravity="center_vertical" android:id="@+id/upload_book_writer_txt" android:background="@drawable/shape_login_input_bg" android:layout_width="match_parent" android:layout_height="@dimen/input_et_height" android:layout_marginTop="10dp" android:singleLine="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
            <com.shizhefei.view.indicator.ScrollIndicatorView android:layout_gravity="center_horizontal" android:id="@+id/upload_file_indicator" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="10dp"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <com.biquge.ebook.app.widget.ClearEditText android:textSize="14sp" android:textColor="@color/color_666666" android:textColorHint="@color/color_999999" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/upload_book_address_txt" android:background="@drawable/shape_login_input_bg" android:layout_width="match_parent" android:layout_height="@dimen/input_et_height" android:hint="@string/upload_book_input_linkurl" android:singleLine="true" android:inputType="textUri" android:paddingStart="10dp" android:paddingEnd="10dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/color_666666" android:textColorHint="@color/color_999999" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/upload_book_select_file" android:background="@drawable/shape_login_input_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:hint="@string/upload_book_local_file" android:paddingStart="10dp" android:paddingEnd="10dp"/>
            </FrameLayout>
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/upload_book_cover" android:layout_marginStart="5dp"/>
            <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/upload_book_cover_layout" android:layout_width="@dimen/book_image_list_width" android:layout_height="@dimen/book_image_list_height" android:layout_marginTop="10dp">
                <ImageView android:id="@+id/upload_book_cover" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/shape_default_head_bg" android:scaleType="centerCrop"/>
                <View android:background="#10000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_fc6a00" android:layout_gravity="center" android:id="@+id/upload_book_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upload_book_select_cover"/>
            </FrameLayout>
            <TextView android:textSize="16sp" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/upload_book_file_bt" android:background="@drawable/selector_red_semicircle_bg" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="30dp" android:text="@string/upload_book_bt"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
