<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/txt_download_icon"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_weight="1">
        <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/item_download_file_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="文件名"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp">
            <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:id="@+id/item_download_file_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0/0"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_3498DB" android:id="@+id/item_download_file_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <ProgressBar android:id="@+id/item_download_file_progressbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:progress="30" style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="50dp" android:layout_height="50dp">
        <ImageView android:id="@+id/item_download_file_download" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/download_checkbox_bg" android:scaleType="center"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_wathet" android:gravity="center" android:id="@+id/item_download_finish_openread" android:background="@drawable/shape_bg_app_theme" android:paddingLeft="7dp" android:paddingTop="3dp" android:paddingRight="7dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/txt_download_read_txt" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/item_download_select_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/selector_select_book" android:scaleType="center"/>
    </RelativeLayout>
</LinearLayout>
