<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/shape_dialog_tips_bg" android:padding="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15sp" android:textColor="@color/color_000000" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/download_batch_title_txt"/>
        <ImageView android:layout_gravity="end" android:id="@+id/dialog_close_btn" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/swl_ad_close"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/chapter_batch_list_rv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="14sp" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/chapter_batch_start_btn" android:background="@drawable/selector_register_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_margin="15dp" android:layout_marginTop="30dp" android:text="@string/download_batch_confirm_txt"/>
</LinearLayout>
