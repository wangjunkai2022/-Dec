<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/guide_parent_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.biquge.ebook.app.widget.StatusBarView android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/change_source_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="50dp" android:src="@drawable/yd_before"/>
            <LinearLayout android:gravity="end" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="50dp">
                    <TextView android:textSize="12sp" android:textColor="#ffffffff" android:gravity="center" android:background="@drawable/ch" android:paddingLeft="20dp" android:paddingTop="6dp" android:paddingRight="20dp" android:paddingBottom="6dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/book_change_source_txt"/>
                </LinearLayout>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_gestures_center"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/color_9E9E9E" android:gravity="center" android:background="@drawable/simple_bg_selector" android:paddingLeft="20dp" android:paddingTop="6dp" android:paddingRight="20dp" android:paddingBottom="6dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="50dp" android:text="@string/book_report_error_txt" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_9E9E9E" android:gravity="center" android:background="@drawable/simple_bg_selector" android:paddingLeft="20dp" android:paddingTop="6dp" android:paddingRight="20dp" android:paddingBottom="6dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="50dp" android:text="@string/book_refresh_chapter_txt" android:layout_centerVertical="true"/>
            <ImageView android:paddingLeft="15dp" android:paddingRight="20dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="50dp" android:src="@drawable/hamb_gray"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/change_source_web_layout" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="50dp" android:src="@drawable/txtdl_back" android:scaleType="center"/>
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="50dp">
                    <TextView android:textSize="16sp" android:textColor="#ffffffff" android:layout_gravity="center" android:background="@drawable/ch" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/book_click_change_source_txt"/>
                </LinearLayout>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/comic_guide_gestures_center"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/color_666666" android:gravity="center" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/book_refresh_chapter_txt"/>
            <TextView android:textSize="10sp" android:textColor="@color/color_666666" android:gravity="center" android:paddingTop="6dp" android:paddingBottom="6dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/txt_open_bookstore_txt" android:drawableTop="@drawable/web_read_to_sc" android:paddingStart="15dp" android:paddingEnd="10dp" android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#ffffffff" android:layout_gravity="center_horizontal" android:background="@drawable/ch" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="@string/book_change_source_desc_txt"/>
        <ImageView android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ce"/>
    </FrameLayout>
</LinearLayout>
