    <TextView android:textSize="14sp" android:textColor="#ffd8d8d8" android:id="@+id/font_dialog_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/read_font_title_txt" android:layout_centerHorizontal="true"/>
