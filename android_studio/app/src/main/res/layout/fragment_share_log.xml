            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/share_log_value_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:textIsSelectable="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/share_log_feed_ad_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_marginTop="20dp" android:textIsSelectable="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
