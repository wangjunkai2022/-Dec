<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/new_store_item_bg_selector" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="8dp">
    <ImageView android:id="@+id/item_simple_book_image" android:layout_width="@dimen/comic_image_list_width" android:layout_height="@dimen/comic_image_list_height" android:scaleType="centerCrop" android:layout_centerVertical="true" android:layout_marginEnd="15dp"/>
    <TextView android:textSize="@dimen/item_book_name_txt_size" android:textColor="@color/color_333333" android:id="@+id/item_simple_book_name_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_toRightOf="@+id/item_simple_book_image"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:id="@+id/item_simple_book_author_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:singleLine="true" android:layout_toRightOf="@+id/item_simple_book_image" android:layout_below="@+id/item_simple_book_name_txt"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/item_simple_book_type_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/item_simple_book_image" android:layout_below="@+id/item_simple_book_author_txt"/>
    <TextView android:textSize="@dimen/item_score_txt_size" android:textStyle="bold" android:textColor="@color/color_score" android:id="@+id/item_simple_book_score_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true" android:layout_below="@+id/item_simple_book_author_txt" android:layout_alignParentRight="true" android:layout_marginEnd="10dp"/>
    <TextView android:textSize="12.5sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/item_simple_book_simple_info_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="2" android:layout_toRightOf="@+id/item_simple_book_image" android:layout_below="@+id/item_simple_book_type_txt"/>
</RelativeLayout>
